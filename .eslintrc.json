{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb",
        "plugin:node/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-process-exit": "warn",
        "object-shorthand": "warn",
        "class-methods-use-this": "error",
        "strict": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "func-names": "off",
        "indent": "off",
        "arrow-parens": [
            "error",
            "as-needed"
        ]
    }
}
